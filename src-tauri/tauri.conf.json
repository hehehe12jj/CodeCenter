{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CodeAgent Dashboard",
  "version": "0.1.0",
  "identifier": "com.codeagent.dashboard",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "CodeAgent Dashboard",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true,
        "windowEffects": {
          "effects": ["acrylic"],
          "state": "followsWindowActiveState"
        }
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
